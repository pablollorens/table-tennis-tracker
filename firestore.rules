rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Players collection
    match /players/{playerId} {
      // Allow reading any individual player document
      // (Users need to read their own profile even when inactive)
      allow get: if true;

      // Allow listing/querying players for:
      // 1. Active players (leaderboard, player selection)
      // 2. Nickname availability checking (includes inactive players)
      allow list: if resource.data.isActive == true ||
                     request.query.limit == 1;  // Nickname availability check uses limit 1

      // Allow creation of inactive players (for self-registration)
      allow create: if request.resource.data.isActive == false;

      // Players can update their own document (profile completion)
      // Note: Since we don't use Firebase Auth, we can't verify identity
      // This is a known limitation - document in security notes
      allow update: if true;
    }

    // Config collection (read-only for clients)
    match /config/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Sessions collection
    match /sessions/{sessionId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;

      // Matches subcollection under sessions
      match /matches/{matchId} {
        allow read: if true;
        allow create: if true;
        allow update: if true;
        allow delete: if true;
      }
    }

    // Matches collection (top-level, if used)
    match /matches/{matchId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }

    // Match History collection (for player stats and historical tracking)
    match /matchHistory/{matchId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }
  }
}
